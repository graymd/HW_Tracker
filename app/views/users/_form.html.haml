.col-md-6.col-md-offset-3
  .list-group-item
    = form_for @user do |f|
      .form-group
        = f.label :first_name
        = f.text_field :first_name, class: "form-control"
      .form-group
        = f.label :last_name
        = f.text_field :last_name, class: "form-control"
      .form-group
        = f.label :github_account
        = f.text_field :github_account, class: "form-control"
      %br
      .list-group-item
        = f.label :admin
        = f.radio_button(:admin, 1)
        = f.label(:admin, "yes")
        = f.radio_button(:admin, 0)
        = f.label(:admin, "no")
      %br
      .form-group
        = f.submit "Submit", class: "btn btn-primary"
        - if current_page?(:controller => 'users', :action => 'new')
          = link_to "Cancel", users_path, class: "btn btn-danger"
        -elsif current_page?(:controller => 'users', :action => 'edit')
          = link_to "Cancel", user_path(@user), class: "btn btn-danger"
