.col-md-6.col-md-offset-3.text-center
  .row
    .list-group-item  
      %strong Address:
      %br
      = @location.street_address
      %br
      = @location.city + ', ' + @location.state + ' ' + @location.zip_code.to_s
      %br
      %br
        %strong Opened:
        = @location.open_date
  %br
  .row
    .list-group-item
      %strong Courses offered:
      %br
      %ul.text-left
        - @courses.each do |course|
          %li
            = link_to course.name, course_path(course)

  %br
  = link_to "Edit location", edit_location_path(@location)
  |
  = link_to "Delete location", location_path(@location), method: :delete